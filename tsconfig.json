{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@containers/*": [
        "src/containers/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@globalContext": [
        "src/context/index"
      ],
      "@utils": [
        "src/utils/index"
      ],
      "@config": [
        "src/config"
      ],
    },
    "target": "es6",
    "lib": [
      "es5",
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/**/*.ts",
    "**/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}